{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Multicast-Settings",
            "items": {
                "BIP": {
                    "type": "text",
                    "xs":12,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Multicast-IP",
                    "help": "Multicast IP of EMETER Protocol (Do not change)"
                },
                "BPO": {
                    "type": "number",
                    "min": 1,
                    "max": 65535,
                    "xs":12,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Multicast-Port",
                    "help": "Multicast Port of EMETER Protocol (Do not change)"
                },
                "OIP": {
                    "type": "ip",
                    "label": "Own Network Interface IPs",
                    "listenOnAllPorts": true,
                    "onlyIp4": true,
                    "sm":12,
                    "md":6,
                    "lg":6,
                    "xs":12,
                    "newLine": true,
                    "help": "Select Network Interface IP to listen for Multicasts"
                },
                "ipVal": {
                    "type":"pattern",
                    "label": "Selected Network Interface IP",
                    "pattern":"${data.OIP}",
                    "sm":12,
                    "md":6,
                    "lg":6,
                    "xs":12,
                    "help": "IP 0.0.0.0 means listen to all available Network Interfaces"
                },
                "EMIP": {
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "newLine": true,
                    "label": "Energy Meter IP",
                    "help": "Select the IP of a specific Energy Meter - IP 0.0.0.0 selects all Energy Meters"
                }
            }
        },
        "_options2": {
            "type": "panel",
            "label": "Options",
            "items": {
                "L1": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Details-L1"
                },
                "L2": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Details-L2"
                },
                "L3": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Details-L3"
                },
                "ext": {
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Extended Mode"
                },
                "rtP": {
                    "newLine": true,
                    "type": "number",
                    "min": 1,
                    "max": 30,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Realtime Update Interval",
                    "help": "Update Interval for Realtime Data (in Seconds)"
                },
                "nrtP": {
                    "type": "number",
                    "min": 30,
                    "max": 3600,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "non-Realtime Update Interval",
                    "help": "Update Interval for non-Realtime Data (in Seconds)"
                }
            }
        }
    }
}

